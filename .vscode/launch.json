  "version": "0.2.0",
  "configurations": [
    {
      "name": "jasmine tests",
      "type": "node",
      "request": "launch",
      // "runtimeExecutable": "",
      "args": ["--config=spec/support/jasmine.json"],
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      // "port": 9229,
      "program": "${workspaceFolder}/node_modules/jasmine/bin/jasmine.js",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run bundle",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/dist/smart-selectors-api.cjs.js",
      "args": ["edit.png"]
    }
  ]
}
